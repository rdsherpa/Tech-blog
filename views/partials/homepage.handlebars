{{!-- using built in #tags --}}
{{#each post}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{user.username}} on {{createdAt}}</h6>
    <p class="card-text">{{content}}</p>
    <a href="/post/{{id }}" class="card-link">Post link</a>
  </div>
</div>
{{/each}}